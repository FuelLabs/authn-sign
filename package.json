{
  "name": "authn-sign",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "git@github.com:FuelLabs/authn-sign.git"
  },
  "homepage": "https://authn-sign.vercel.app",
  "description": "authn-sign - a simplified browser interface for WebAuthn focused on secp256r1 (P-256) and SHA-256.",
  "author": "Fuel Labs Inc. <contact@fuel.sh> (https://fuel.network/)",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "copy_to_example": "cp build/authn-sign.js example/authn-sign.js",
    "build:min": "bun build ./src/index.js --outdir ./build/ --entry-naming [dir]/authn-sign.min.[ext] --target browser --minify --sourcemap=external",
    "build:esm": "bun build ./src/index.js --outdir ./build/ --entry-naming [dir]/authn-sign.esm.[ext] --target browser --format esm --sourcemap=external",
    "build:unminified": "bun build ./src/index.js --outdir ./build/ --entry-naming [dir]/authn-sign.[ext] --target browser --sourcemap=external",
    "build": "bun run build:min && bun run build:unminified && npm run build:esm && bun run copy_to_example",
    "prepublishOnly": "bun run build && cp -rf build umd",
    "postpublish": "rm -rf umd"
  },
  "devDependencies": {
    "bun-types": "latest",
    "ethers": "^6.8.1",
    "@passwordless-id/webauthn": "^1.3.0",
    "fuels": "^0.67.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@noble/curves": "^1.2.0"
  }
}