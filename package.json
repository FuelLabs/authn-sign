{
  "name": "authn-sign",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "copy_to_example": "cp build/authn-sign.js example/authn-sign.js",
    "build:min": "bun build ./src/index.js --outdir ./build/ --entry-naming [dir]/authn-sign.min.[ext] --target browser --minify --sourcemap=external",
    "build:unminified": "bun build ./src/index.js --outdir ./build/ --entry-naming [dir]/authn-sign.[ext] --target browser --sourcemap=external",
    "build": "bun run build:min && bun run build:unminified && bun run copy_to_example"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@noble/curves": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@passwordless-id/webauthn": "^1.3.0"
  }
}